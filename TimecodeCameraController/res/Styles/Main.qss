* {
    font-size: 12pt;
}

/* QMenuBar */

QMenuBar {
    background-color: palette(window);
    spacing: 0;
}

QMenuBar::item {
    padding: 2px 10px;
    background: transparent;
    border: none;
    color: rgb(255, 255, 255);
}

QMenuBar::item:selected {
    background: rgba(255, 255, 255, 36);
}

QMenuBar::item:pressed {
    background: rgba(255, 255, 255, 36);
}

/* QMenu */

QMenu {
    background-color: palette(dark);
    border: 1px solid palette(window);
    border-top: none;
    padding: 4px 0px;
    spacing: 0;
}

QMenu::item {
    background: transparent;
    padding: 6px 16px 6px 16px;
    border: none;
    color: rgb(255, 255, 255);
}

QMenu::icon {
    padding-left: 16px;
}

QMenu::item:selected {
    background: rgba(0, 105, 230, 128);
}

QMenu::item:pressed {
    background: rgba(0, 105, 220, 128);
}

QMenu::separator {
    height: 1px;
    background: palette(midlight);
    margin: 4px;
}

QMenu::right-arrow {
  image: url(:/Image/SmallRightArrow.svg);
}

/* QTreeView */

QTreeView::item  {
    margin: 1px 2px;
}

QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings  {
    border-image: none;
    image: url(:/Image/MidDownArrow.svg);
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:closed:has-children:has-siblings {
    border-image: none;
    image: url(:/Image/MidRightArrow.svg);
}

/* QScrollBar */

QAbstractScrollArea {
    background: none;
    border: none;
}

QAbstractScrollArea::corner {
    background: none;
    border: none;
}

QScrollBar::handle {
    background: rgba(255, 255, 255, 32);
    border: none;
}

QScrollBar:vertical {
    width: 16px;
    border-left: 1px solid rgba(255, 255, 255, 32);
}

QScrollBar:horizontal {
    height: 16px;
    border-top: 1px solid rgba(255, 255, 255, 32);
}

QScrollBar::add-line:vertical {
    height: 0px;
    border: none;
    background: none;
}

QScrollBar::sub-line:vertical {
    height: 0px;
    border: none;
    background: none;
}

QScrollBar::add-line:horizontal {
    border: none;
    background: none;
}

QScrollBar::sub-line:horizontal {
    border: none;
    background: none;
}

QScrollBar::add-line:vertical {
    border: none;
    background: none;
}

QScrollBar::sub-line:vertical {
    border: none;
    background: none;
}

QScrollBar:left-arrow:horizontal, QScrollBar::right-arrow:horizontal {
    border: none;
    background: none;
}

QScrollBar:up-arrow:vertical, QScrollBar::down-arrow:vertical {
    border: none;
    background: none;
}

QScrollBar:add-page:horizontal, QScrollBar::sub-page:horizontal {
    border: none;
    background: none;
}

QScrollBar:add-page:vertical, QScrollBar::sub-page:vertical {
    border: none;
    background: none;
}

/* QToolTip */

QToolTip {
    background: palette(dark); 
    border: 1px solid palette(mid);
    color: rgb(255, 255, 255);
}

/* QComboBox */

QComboBox {
    border: 1px solid palette(mid);
    padding: 1px 18px 1px 6px;
    font-size: 13pt;
}

QComboBox QAbstractItemView {
    background-color: palette(dark);
    selection-background-color: rgba(0, 105, 230, 192);
}

QComboBox::drop-down {
    border: none;
    background-color: rgb(80, 80, 80);
    padding: 4;
}

QComboBox::down-arrow {
    border: none;
    border-image: url(:/Image/MidDownArrow.svg) 4;
}

QComboBox::down-arrow:on {
    border: none;
    border-image: url(:/Image/MidDownArrow.svg) 4;
}

/* QSpinBox */

QSpinBox {
    border: 1px solid palette(mid);
    font-size: 13pt;
    padding-right: 16px;
    padding-left: 6px;
}

QSpinBox::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right;

    width: 16px;
    border-image: url(:/Image/MidUpArrow.svg);
    margin-top: 1px;
    margin-right: 1px;
    border-width: 0px;
    background-color: rgb(80, 80, 80);
}

QSpinBox::up-button:hover {
    background-color: rgb(120, 120, 120);
}

QSpinBox::up-button:pressed {
    background-color: rgb(100, 100, 100);
}

QSpinBox::up-button:off {
    background-color: rgb(60, 60, 60);
}

QSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;

    width: 16px;
    margin-bottom: 1px;
    margin-right: 1px;
    border-image: url(:/Image/MidDownArrow.svg);
    border-width: 0px;
    background-color: rgb(80, 80, 80);
}

QSpinBox::down-button:hover {
    background-color: rgb(120, 120, 120);
}

QSpinBox::down-button:pressed {
    background-color: rgb(100, 100, 100);
}

QSpinBox::down-button:off {
    background-color: rgb(60, 60, 60);
}